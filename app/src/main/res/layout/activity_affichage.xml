<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.amel.test.activity_affichage">

    <TextView
        android:id="@+id/txt_view_recherche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="8dp"
        android:text="Affichage"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <EditText

        android:id="@+id/ed_recherche"
        android:layout_below="@+id/txt_view_recherche"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:hint="rechercher"
        android:gravity="center"
        tools:layout_editor_absoluteY="44dp"
        tools:layout_editor_absoluteX="8dp"
        tools:ignore="DuplicateIds,MissingConstraints" />

    <ListView
        android:id="@+id/lv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/ed_recherche"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints">

    </ListView>

</android.support.constraint.ConstraintLayout>
